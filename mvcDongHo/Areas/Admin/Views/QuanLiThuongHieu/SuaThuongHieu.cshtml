@model mvcDongHo.Areas.Admin.ViewModels.ThuongHieuView;
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<br />
<div class="col-md-10" style="margin-left: 8%">
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title"> Sửa thương hiệu</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form asp-area="Admin" asp-controller="QuanLiThuongHieu" asp-action="SuaThuongHieuData">
            @*đường dẫn đến admin/ chạy quanlithuonghieucontroler/ chạy hàm sửa thương hiệu*@
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Mã thương hiệu </label>
                    <input asp-for="thuongHieuDTO.IDThuongHieu" value="@ViewBag.SuaThuongHieu.IDThuongHieu" readonly="readonly" class="form-control" id="exampleInputEmail1" placeholder="Nhập mã thương hiệu">
                   
                    <span class="focus-input100 text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Tên thương hiệu</label>
                    <input asp-for="thuongHieuDTO.TenThuongHieu" value="@ViewBag.SuaThuongHieu.TenThuongHieu" class="form-control" id="exampleInputPassword1" placeholder="Nhập tên thương hiệu">@*asp-for định danh cho cái input, value là lấy dữ liệu để bên sửa có dữ liệu*@
                    <span class="focus-input100 text-danger"></span>
                </div>
                <!--Combobox-->
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Cập nhật</button>
            </div>
        </form>
    </div>
    <!-- /.card -->

</div>


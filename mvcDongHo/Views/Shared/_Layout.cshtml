<!-- Đoạn code dưới lấy danh sách giỏ hàng qua session key "cart",
    sau đó đếm nó, có bao nhiêu product trong giỏ hàng, mặc định  = 0 -->
@{
    var data = Context.Session.GetString("cart");
    int coutCart = 0;
    if (data == null)
    {
        coutCart = 0;
    }
    else
    {
        var data2 = Context.Session.GetString("cart");
        List<mvcDongHo.ViewModels.CartItem> dataCart = JsonConvert.DeserializeObject<List<mvcDongHo.ViewModels.CartItem>>(data2);
        foreach (var item in dataCart)
        {
            coutCart += item.quantityItem;
        }
    }
}

